<div .ui .middle .aligned .center .aligned .grid>
  <div .column>
    <h2 .ui teal .image .header>
      <div .content>
        Wolf
    <form .ui .large .form 
      method="post"
      action=@{AuthR loginFormPostTargetR}>
      <div .ui .stacked .segment>
        <div .field>
          <div .ui .left .icon .input>
            <i .user .icon></i>
            <input
              name="userkey"
              placeholder="Username or Email"
              required=""
              value=""
              type="text">
        <div .field>
          <div .ui .left .icon .input>
            <i .lock .icon></i>
            <input
              name="passphrase"
              placeholder="Passphrase"
              required=""
              value=""
              type="password">
        ^{token}
        <button .ui .fluid .large .teal .submit .button>
          Login

    $forall (_, msg) <- msgs
      <div .ui .error .message>
        #{msg}

    <div .ui .message>
      <a href=@{AuthR registerR}>Sign Up
