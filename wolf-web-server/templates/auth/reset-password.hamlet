<h1> 
  Forgot Password
<form
  method="post"
  action="@{toParent resetPasswordR}">
  <label for="forgot-password-email">
    Email
  <input
    id="forgot-password-email"
    name="userkey"
    placeholder="Email"
    required=""
    value=""
    type="text">
  ^{token}
  <button
    id="forgot-password-submit"
    type="submit">
    Send password reset email

